<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="dlmu.oa.domain">

	<class name="Privilege" table="oa_privilege">
		<id name="id">
            <generator class="native"/>
		</id>
		<property name="name"/>
		<property name="url"/> 
		<property name="icon"/> 
		
		<!-- roles属性，本类与Role的多对多 -->
		<set name="roles" table="oa_role_privilege">
			<key column="privilegeId"></key>
			<many-to-many class="Role" column="roleId"></many-to-many>
		</set>
		
		<!--parent属性，本类与(上级)Privilege的多对一关系  -->
		<many-to-one name="parent" class="Privilege" column="parentId"></many-to-one>
	
		<!--children属性，本类与(下级)Privilege的一对多关系  -->
		<set name="children" cascade="delete" order-by="id" lazy="false">
			<key column="parentId"></key>
			<one-to-many class="Privilege"></one-to-many>
		</set>
		
	</class>
	
</hibernate-mapping>
